<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <%- include("partials/header") %> 
  <meta name="viewport" content="width=device-width, initial-scale = 1.0, 
maximum-scale=1.0, user-scalable=0">
<meta name="apple-mobile-web-app-capable" content="yes" />
  <title>blogs</title>
</head>
<body>
  <br>
<div class="content">
  <div class="services-section" id="services">
      <div class="container"> 
      <div class="services-header">
          <h3><span>[</span> blogs <span>]</span></h3>
              
      </div>
      
      <% blogs.forEach( function (blog){ %>
           
          <div class="col-lg-4 blogs-grid">
              <div class="card" style="width: 22rem;">
                  <img class="card-img-top" src="/uploads/<%= blog.image %>" alt="Card image cap">
                  <div class="card-body">
                    <h5 style="font-size: x-large;" class="card-title"><strong><%= blog.title %></strong></h5>
                    <p style="font-size: large;" class="card-text"><%= blog.content %></p>
                    <a style="font-size: larger;" href="/blogs/<%=blog._id%>" class="btn btn-primary btn-lg">Read More</a>
                  </div>
                </div>
          </div> 
          <% } )%>
      </div>
      </div>
      </div>
</body>
</html>



      



